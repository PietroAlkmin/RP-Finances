/**
 * Configuração do TypeScript para o projeto RP-Finances
 * 
 * Define como o TypeScript deve:
 * - Compilar os arquivos .ts
 * - Resolver imports e módulos
 * - Validar tipos e sintaxe
 * - Integrar com o Vite
 */

{
  "compilerOptions": {
    // Versão do JavaScript de saída (ES2020 é moderna e compatível)
    "target": "ES2020",
    
    // Sistema de módulos (ESNext para import/export modernos)
    "module": "ESNext",
    "moduleResolution": "bundler",
    
    // Permitir imports de módulos JavaScript sem tipos
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    
    // Verificações de tipo mais rigorosas
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    
    // Suporte a DOM (para manipular HTML)
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    
    // Resolução de tipos de módulos
    "types": ["vite/client", "node"],
    
    // Aliases para imports mais limpos (mesmo do vite.config.ts)
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@ts/*": ["src/ts/*"],
      "@styles/*": ["src/styles/*"],
      "@assets/*": ["src/assets/*"]
    },
    
    // Configurações do build
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    
    // Pular verificação de tipos em bibliotecas externas (mais rápido)
    "skipLibCheck": true
  },
  
  // Incluir todos os arquivos TypeScript do projeto
  "include": [
    "src/**/*",
    "vite.config.ts"
  ],
  
  // Excluir diretórios que não precisam ser compilados
  "exclude": [
    "node_modules",
    "dist"
  ]
}
